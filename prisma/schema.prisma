generator client {
  provider = "cargo prisma"
  output   = "../src/prisma.rs"
}

generator clearDbClient {
  provider = "cargo prisma"
  output   = "../src/bin/prisma_client.rs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comic {
  id              String    @id @default(uuid())
  name            String    @default("")
  url             String    @unique
  genre           Json      @default("{}")
  content         String?
  translatorTeam  Json      @default("{}")
  anotherName     String[]
  source          Json      @default("{}")
  author          Json      @default("{}")
  postedBy        Json      @default("{}")
  status          String    @default("")
  thumbnail       String?
  createdDate     DateTime  @default(now())
  updatedDate     DateTime  @default(now())
  pythonFetchInfo Boolean   @default(false)
  chapters        Chapter[]
}

model Chapter {
  id          String   @id @default(uuid())
  name        String
  url         String   @unique
  comicId     String
  images      String[]
  createdDate String
  updatedDate DateTime @default(now())
  comic       Comic    @relation(fields: [comicId], references: [id])
}

model Urls {
  url         String   @unique
  id          String   @id @default(uuid())
  fetched     Boolean  @default(false)
  fetching    Boolean  @default(false)
  createdDate DateTime @default(now())
  isError     Boolean  @default(false)
}

model Proxy {
  id       String  @id @default(uuid())
  url      String
  password String?
  username String?
}
